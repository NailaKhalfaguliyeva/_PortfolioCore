@model _PortfolioCore.Entities.Experience

@{
    ViewData["Title"] = "UpdateExperience";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h3> Experience Update Page </h3>
<br />
<form method="post">

    <input type="hidden" asp-for="ExperienceId" />

    <label>Title</label>
    <input type="text" asp-for="Title" class="form-control" style="border:1px solid grey;" />
    <br />

    <label> SubTitle </label>
    <input type="text" asp-for="SubTitle" class="form-control" style="border:1px solid grey;" />
    <br />

    <label> Date </label>
    <input type="text" asp-for="ExperienceDate" class="form-control" style="border:1px solid grey" />
    <br />

    <label> Description </label>
    <input type="text" asp-for="Description" class="form-control" style="border:1px solid grey" />
    <br />
    <button class="btn btn-outline-primary col-md-12"> Save </button>
</form>