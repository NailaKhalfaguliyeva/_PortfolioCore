@model Message
@{
    ViewData["Title"] = "MessageDetail";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Message Detail</h2>

<div>
    <h4>From: @Model.NameSurname (@Model.Email)</h4>
    <p><strong>Subject:</strong> @Model.Subject</p>
    <p><strong>Message:</strong></p>
    <p>@Model.MessageDetail</p>
    <p><strong>Sent On:</strong> @Model.SendDate.ToString("dd.MM.yyyy HH:mm")</p>
    <p>
        <strong>Read Status:</strong>

        <form asp-action="ChangeReadStatus" method="post" style="display:inline;">
            <input type="hidden" name="id" value="@Model.MessageId" />
            @if (Model.IsRead)
            {
                <button type="submit" class="btn btn-warning">Unread</button>
            }
            else
            {
                <button type="submit" class="btn btn-success">Read</button>
            }
        </form>

    </p>
</div>

<a asp-action="MessageList" class="btn btn-secondary">Back to List</a>