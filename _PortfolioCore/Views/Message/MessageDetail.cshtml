@model Message
@{
    ViewData["Title"] = "MessageDetail";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Message Detail</h2>

<div>
    <h4>From: @Model.NameSurname (@Model.Email)</h4>
    <p><strong>Subject:</strong> @Model.Subject</p>
    <p><strong>Message:</strong></p>
    <p>@Model.MessageDetail</p>
    <p><strong>Sent On:</strong> @Model.SendDate.ToString("dd.MM.yyyy HH:mm")</p>
    <p>
        <strong>Read Status:</strong>
        @if (Model.IsRead)
        {
            <span class="badge bg-success">Read</span>
        }
        else
        {
            <span class="badge bg-warning text-dark">Unread</span>
        }
    </p>
</div>

<a asp-action="MessageList" class="btn btn-secondary">Back to List</a>