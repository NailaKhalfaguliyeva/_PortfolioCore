@model Message
@{
    ViewData["Title"] = "UpdateMessage";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Edit Message</h2>

<form asp-action="UpdateMessage" method="post">
    <input type="hidden" asp-for="MessageId" />

    <div class="form-group">
        <label asp-for="NameSurname"></label>
        <input asp-for="NameSurname" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Subject"></label>
        <input asp-for="Subject" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="MessageDetail"></label>
        <textarea asp-for="MessageDetail" class="form-control" rows="5"></textarea>
    </div>

    <div class="form-check">
        <input asp-for="IsRead" class="form-check-input" type="checkbox" />
        <label asp-for="IsRead" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
    <a asp-action="MessageList" class="btn btn-secondary mt-3">Cancel</a>
</form>