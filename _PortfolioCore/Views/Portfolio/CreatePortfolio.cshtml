@model Portfolio

@{
    ViewData["Title"] = "CreatePortfolio";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>New Project Entry </h1>
<form method="post">
	<label>Title</label>
	<input type="text" asp-for="Title" class="form-control" />
	<br />
	<label>Description</label>
	<input type="text" asp-for="Description" class="form-control" />
	<br />
	<label>Image Url</label>
	<input type="text" asp-for="ImageUrl" class="form-control" />
	<br />
	<label>Category</label>
	<select asp-for="CategoryId" asp-items="ViewBag.v" class="form-control">
		<option value="">-- Select--</option>
	</select>
	<br />
	<label>Project Url</label>
	<input type="text" asp-for="ProjectUrl" class="form-control" />
	<br />
	<button class="btn btn-primary">Save</button>
</form>