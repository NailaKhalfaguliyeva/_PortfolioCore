@model List<Portfolio>

@{
    ViewData["Title"] = "UserProfile";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>UserProfile</h1>

<div class="container mx-auto grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 p-6">
    @foreach (var item in Model)
    {
        <div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700">
            <a href="@item.ProjectUrl" target="_blank">
                <img class="rounded-t-lg w-full h-48 object-cover" src="@item.ImageUrl" alt="@item.Title" />
            </a>
            <div class="p-5">
                <a href="@item.ProjectUrl" target="_blank">
                    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">@item.Title</h5>
                </a>
                <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">@item.Description</p>
                <a href="@item.ProjectUrl" target="_blank" class="inline-flex items-center px-3 py-2 text-sm font-medium text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                    Read more
                    <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9" />
                    </svg>
                </a>
            </div>
        </div>
    }
</div>