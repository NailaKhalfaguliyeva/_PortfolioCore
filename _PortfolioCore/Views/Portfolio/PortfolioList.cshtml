@model List<Portfolio>
@{
    ViewData["Title"] = "PortfolioList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Portfolyö Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Title</th>
        <th>Description</th>
        <th>Category</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.PortfolioId</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Category.CategoryName</td>
            <td><a href="/Portfolio/DeletePortfolio/@item.PortfolioId" class="btn btn-danger">Delete</a></td>
            <td><a href="/Portfolio/UpdatePortfolio/@item.PortfolioId" class="btn btn-success">Update</a></td>
        </tr>
    }
</table>
<a href="/Portfolio/CreatePortfolio/" class="btn btn-primary">Add New Portfolio</a>