@model Education
@{
    ViewData["Title"] = "UpdateEducation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Education Update Page</h3>
<br />
<form method="post">

    <input type="hidden" asp-for="EducationId" />

    <label>Title</label>
    <input type="text" asp-for="Title" class="form-control" style="border:1px solid grey;" />
    <br />

    <label>Subtitle</label>
    <input type="text" asp-for="SubTitle" class="form-control" style="border:1px solid grey;" />
    <br />

    <label>Date</label>
    <input type="text" asp-for="DateInfo" class="form-control" style="border:1px solid grey" />
    <br />

    <label>Description</label>
    <input type="text" asp-for="Description" class="form-control" style="border:1px solid grey" />
    <br />
    <button class="btn btn-outline-primary col-md-12">Save</button>
</form>