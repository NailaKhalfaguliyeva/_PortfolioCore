@model Skill
@{
    ViewData["Title"] = "UpdateSkill";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Skills Update Page</h2>

<form method="post">
    <input type="hidden" asp-for="SkillId" />
    <label>Skill Title</label>
    <input type="text" asp-for="SkillName" class="form-control" />
    <br />
    <label>Talent Value</label>
    <input type="number" asp-for="SkillValue" class="form-control" />
    <br />
    <button class="btn btn-success">Update Skill</button>
</form>