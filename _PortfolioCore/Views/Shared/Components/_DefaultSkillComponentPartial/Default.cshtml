@model List<Skill>

<section id="skills" class="skills section">

    <div class="container section-title" data-aos="fade-up">
        <h2>My Skills</h2>
        <p>Below are my current technical abilities and experience levels</p>
    </div>

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row skills-content skills-animation">

            <div class="col-lg-6">
                @for (int i = 0; i < Model.Count / 2; i++)
                {
                    <div class="progress mb-4">
                        <span class="skill">
                            <strong>@Model[i].SkillName</strong>
                            <i class="val">@Model[i].SkillValue%</i>
                        </span>
                        <div class="progress-bar-wrap">
                            <div class="progress-bar"
                                 role="progressbar"
                                 style="width: @Model[i].SkillValue%"
                                 aria-valuenow="@Model[i].SkillValue"
                                 aria-valuemin="0"
                                 aria-valuemax="100">
                            </div>
                        </div>
                        <small>
                            📁 Portfolio: @Model[i].PortfolioNumber |
                            🔗 Reference: @Model[i].ReferenceNumber |
                            🧠 Ability: @Model[i].AbilityNumber
                        </small>
                    </div>
                }
            </div>

         
            <div class="col-lg-6">
                @for (int i = Model.Count / 2; i < Model.Count; i++)
                {
                    <div class="progress mb-4">
                        <span class="skill">
                            <strong>@Model[i].SkillName</strong>
                            <i class="val">@Model[i].SkillValue%</i>
                        </span>
                        <div class="progress-bar-wrap">
                            <div class="progress-bar"
                                 role="progressbar"
                                 style="width: @Model[i].SkillValue%"
                                 aria-valuenow="@Model[i].SkillValue"
                                 aria-valuemin="0"
                                 aria-valuemax="100">
                            </div>
                        </div>
                        <small>
                            📁 Portfolio: @Model[i].PortfolioNumber |
                            🔗 Reference: @Model[i].ReferenceNumber |
                            🧠 Ability: @Model[i].AbilityNumber
                        </small>
                    </div>
                }
            </div>

        </div>
    </div>
</section>