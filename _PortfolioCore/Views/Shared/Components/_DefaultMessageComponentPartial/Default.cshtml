@model Message
<div class="col-lg-8">
    <form action="/Message/SendMessage" method="post" class="php-email-form" data-aos="fade-up" data-aos-delay="200">
        <div class="row gy-4">

            <div class="col-md-6">
                <input type="text" asp-for="NameSurname" class="form-control" placeholder="Your Name and Surname" required="">
            </div>

            <div class="col-md-6 ">
                <input type="email" class="form-control" asp-for="Email" placeholder="Your Email" required="">
            </div>

            <div class="col-md-12">
                <input type="text" class="form-control" asp-for="Subject" placeholder="Subject" required="">
            </div>

            <div class="col-md-12">
                <textarea class="form-control" asp-for="MessageDetail" rows="6" placeholder="Your Message" required=""></textarea>
            </div>



            <button type="submit">Send Message</button>
        </div>
    </form>
</div>

@if (TempData["Success"] != null)
{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        Swal.fire({
            title: 'Good job!',
            text: @* 'Your message was sent successfully!', *@'@TempData["Success"]',
            icon: 'success',
            showConfirmButton: true
        });
    </script>
}

