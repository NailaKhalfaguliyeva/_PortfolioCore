@model Category

@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Category Update Page</h3>
<br />
<form method="post">
    <input type="hidden" asp-for="CategoryId" />

    <label>Category Name</label>
    <input type="text" asp-for="CategoryName" class="form-control" style="border:1px solid grey;" />
    <br />

    <button class="btn btn-outline-primary col-md-12">Save</button>
</form>