@model List<About>
@{
    ViewData["Title"] = "AboutList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>About Me</h3>
<br />

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Description</th>
        <th>Jobtitle</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>City</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutId</td>
            <td>@item.AboutDescription</td>
            <td>@item.JobTitle</td>
            <td>@item.Email</td>
            <td>@item.Phone</td>
            <td>@item.City</td>
            <td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-outline-info">Update</a></td>
            <td><a href="/About/DeleteAbout/@item.AboutId" class="btn btn-outline-danger">Delete</a></td>
        </tr>
    }

</table>
<br />
<td><a href="/About/CreateAbout/" class="btn btn-outline-primary col-md-12">Add New About Me Information</a></td>