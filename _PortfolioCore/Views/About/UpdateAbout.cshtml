@model About
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>About Me Update Page</h3>
<br />


<div class="card">
    <div class="card-body">

        <form method="post" asp-action="UpdateAbout" asp-controller="About" enctype="multipart/form-data">

            <input type="hidden" asp-for="AboutId" />

            <label>Description</label>
            <input type="text" class="form-control" asp-for="AboutDescription" style="border:1px solid grey; " />
            <br />
            <label>JobTitle</label>
            <input type="text" class="form-control" asp-for="JobTitle" style="border:1px solid grey;" />
            <br />
            <label>Select Image</label>
            <br />
            <img src="~/images/@Model.ImageUrl" alt="Image" width="100" height="100" />

            <input type="file" class="form-control" name="file" style="border:1px solid grey" ; />
            <br />
            <label>Email</label>
            <input type="text" class="form-control" asp-for="Email" style="border:1px solid grey;" />
            <br />
            <label>Phone Number</label>
            <input type="text" class="form-control" asp-for="Phone" style="border:1px solid grey" ; />
            <br />
            <label>City</label>
            <input type="text" class="form-control" asp-for="City" style="border:1px solid grey;" />
            <br />
            <label>Age</label>
            <input type="text" class="form-control" asp-for="Age" style="border:1px solid grey; " />
            <br />
            <br />
            <label>Degree</label>
            <input type="text" class="form-control" asp-for="Degree" style="border:1px solid grey;" />
            <br />

            <button class="btn btn-outline-primary col-md-12" type="submit">Save</button>
        </form>
    </div>
</div>